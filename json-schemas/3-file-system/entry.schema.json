{
    "$id": "https://example.com/entry-schema",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "description": "JSON Schema for an fstab entry",
    "type": "object",
    "required": [ "storage" ],
    "properties": {
        "storage": {
            "type": "object",
            "oneOf": [
                { "$ref": "#/$defs/diskDevice" },
                { "$ref": "#/$defs/diskUUID" },
                { "$ref": "#/$defs/nfs" },
                { "$ref": "#/$defs/tmpfs" }
            ]
        },
        "fstype": {
            "enum": [ "ext3", "ext4", "btrfs" ]
        },
        "options": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "string"
            },
            "uniqueItems": true
        },
        "readonly": {
            "type": "boolean"
        }
    },
    "$defs": {
        "diskDevice": {},
        "diskUUID": {},
        "nfs": {},
        "tmpfs": {}
    }
}