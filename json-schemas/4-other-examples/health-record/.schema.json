{
    "$id": "https://example.com/health-record.schema.json",
    "$schema": "http://json-schema.org/draft/2020-12/schema",
    "description": "Schema for representing a help record",
    "type": "object",
    "required": [
        "patientName",
        "dateOfBirth",
        "bloodType"
    ],
    "properties": {
        "patientName": {
            "type": "string"
        },
        "dateOfBirth": {
            "type": "string",
            "format": "date"
        },
        "bloodType": {
            "type": "string"
        },
        "allergies": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "conditions": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "medications": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "emergencyContact": {
            "$ref": "../user-profile/.schema.json"
        }
    }
}